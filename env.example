# OrangeHRM Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=orangehrm_mysql
MYSQL_USER=orangehrm
MYSQL_PASSWORD=orangehrm123

# OrangeHRM Configuration
OHRM_DB_HOST=mysql
OHRM_DB_PORT=3306
OHRM_DB_NAME=orangehrm_mysql
OHRM_DB_USER=orangehrm
OHRM_DB_PASSWORD=orangehrm123

# Application Settings
OHRM_APP_ENV=production
OHRM_APP_DEBUG=false
OHRM_APP_URL=http://your-domain.com

# Admin User Configuration
OHRM_ADMIN_USERNAME=Admin
OHRM_ADMIN_PASSWORD=Ohrm@1423
OHRM_ADMIN_EMAIL=admin@example.com
OHRM_ADMIN_FIRST_NAME=OrangeHRM
OHRM_ADMIN_LAST_NAME=Admin

# Organization Settings
OHRM_ORG_NAME=OrangeHRM
OHRM_ORG_COUNTRY=US

# Security Settings
OHRM_ENCRYPTION_KEY=your-32-character-encryption-key-here
OHRM_SESSION_LIFETIME=3600

# Email Configuration (Optional)
MAILER_DSN=smtp://localhost:1025
MAILER_FROM_EMAIL=noreply@example.com
MAILER_FROM_NAME=OrangeHRM

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# SSL Configuration (Optional)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
